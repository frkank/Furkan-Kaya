@model List<Direction>
<table class="table table-bordered mt-3">
            <thead>
                <tr>
                <th>Kalkış</th>
                <th>Durak 1</th>
                <th>Durak 2</th>
                <th>Durak 3</th>
                <th>Varış</th>
                <th>Tarih</th>
                <th>Saat</th>
                <th>Fiyat</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Start</td>
                            <td>@item.direction1</td>
                            <td>@item.direction2</td>
                            <td>@item.direction3</td>
                            <td>@item.Finish</td>
                            <td>@item.Date</td>
                            <td>@item.Time</td>
                            <td>@item.Price</td>
                            <td>
                                <form action="/direction/deletedirection" method="POST" style="display:inline;">
                                    <input type="hidden" name="directionId" value="@item.DirectionId" />
                                    <button type="submit" class="btn btn-danger btn-md mr-2" style="color: white;">Güzergahı Kaldır</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>