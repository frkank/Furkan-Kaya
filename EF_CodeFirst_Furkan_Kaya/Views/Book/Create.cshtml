@model EF_CodeFirst.Models.Book
@{
    ViewData["Title"] = "Create";
}
<h4>Add New Book</h4>
<div class="row">
    <div class="col-sm-6">
        <form asp-action="Create" class="form">
            <input type="text" asp-for="BookName" placeholder="Book's Name..." class="form-control mb-4">
            <input type="text" asp-for="BookYearOfPublication" placeholder="Year of Publication..." class="form-control mb-4">
            <input type="text" asp-for="BookEditionNumber" placeholder="Edition Number..." class="form-control mb-4">
            <input type="text" asp-for="BookNumberOfPages" placeholder="Number of Pages..." class="form-control mb-4">
            <input type="text" asp-for="BookQuantity" placeholder="Book Quantity..." class="form-control mb-4">
            <label asp-for="CategoryId" class="control-label">Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.CategoryId"></select><br>
            <label asp-for="AuthorId" class="control-label">Author</label>
            <select asp-for="AuthorId" asp-items="ViewBag.AuthorId"></select><br>
            <label asp-for="PublisherId" class="control-label">Publisher</label>
            <select asp-for="PublisherId" asp-items="ViewBag.PublisherId"></select><br>
            <input type="submit" value="Create" class="btn btn-success">
            <a asp-action="Index" class="btn btn-info">Back to Authors</a>
        </form>
    </div>
</div>