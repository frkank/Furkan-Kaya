@model EF_CodeFirst.Models.Author
@{
    ViewData["Title"] = "Create";
}
<h4>Add New Author</h4>
<div class="row">
    <div class="col-sm-6">
        <form asp-action="Create" class="form">
            <input type="text" asp-for="AuthorName" placeholder="Author's Name..." class="form-control mb-4">
            <input type="text" asp-for="AuthorSurname" placeholder="Author's Surname..." class="form-control mb-4">
            <input type="text" asp-for="AuthorDateOfBirth" placeholder="Author's Birthday..." class="form-control mb-4">
            <input type="submit" value="Create" class="btn btn-success">
            <a asp-action="Index" class="btn btn-info">Back to Authors</a>
        </form>
    </div>
</div>