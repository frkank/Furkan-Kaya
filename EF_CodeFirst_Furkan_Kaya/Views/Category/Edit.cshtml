@model Category
@{
    ViewData["Title"] = "Edit";
}
<h4>Edit Category</h4>
<hr>
<form asp-action="Edit" class="form-label">
    <label class="editLabel">ID:</label>
    <label asp-for="CategoryId" class="editLabel">@Model.CategoryId</label><br>
    <input type="hidden" asp-for="CategoryId" class="editInput">
    <label class="editLabel">Category Name:</label>
    <input type="text" asp-for="CategoryName" class="editInput"><br>
    <label class="editLabel">Category Description:</label>
    <input type="text" asp-for="CategoryDescription" class="editInput"><br>
    <input type="submit" value="Save Changes" class="editButton">
</form>